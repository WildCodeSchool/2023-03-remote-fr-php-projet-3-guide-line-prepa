<div {{ attributes }} aria-live="polite" aria-atomic="true" class="position-relative" id="toaster">
    <div class="toast-container position-fixed top-0 end-0 p-3">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="toast text-bg-{{ label }} border-0"
                    {{ stimulus_controller('toast') }}
                     role="alert" aria-live="assertive" aria-atomic="true">
                    <div class="toast-body d-flex">
                        <span class="me-2">{{ message }}</span>
                        <button type="button"
                                class="btn-close ms-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                    </div>
                </div>
            {% endfor %}
        {% endfor %}
    </div>
</div>
