{% extends 'layout/layout-container.html.twig' %}

{% block title %}

{% endblock %}

{% block content %}
    <h1 class="text-center">Instruments</h1>
    <div class="row">
        {% for instrument in instruments %}
            <div class="col-lg-4 col-6 mb-5">
                <div class="d-flex flex-column justify-content-start align-items-center position-relative">
                    <img src="{{ (instrument_dir ~ '/' ~ instrument.picture)|imagine_filter('instrument_swiper_thumb') }}"
                         class="img-fluid mb-3"
                         alt="{{ instrument.name }}">
                    <h2 class="fs-5">{{ instrument.name }}</h2>
                    <p>{{ instrument.company.name }}</p>
                    <a class="stretched-link" href="{{ path('app_instrument_show', {'slug': instrument.slug}) }}"></a>
                </div>
                {% include 'sound/_list-group-sounds.html.twig' %}
            </div>
        {% endfor %}
    </div>
    <div class="d-flex flex-column align-items-center justify-content-center mb-3">
        {{ knp_pagination_render(instruments) }}
    </div>
{% endblock %}

